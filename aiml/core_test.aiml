<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0" encoding="UTF-8">
    <!-- GREETINGS -->
    <category>
        <pattern>XIN CHÀO</pattern>
        <template>
            <random>
                <li>Xin chào!</li>
                <li>Chao xìn!</li>
                <li>Chào nhưng không xin :v</li>
                <li>Xin nhưng không chào ^_^</li>
            </random>
        </template>
    </category>

    <category>
        <pattern>HELLO *</pattern>
        <template>
            <random>
                <li>Hello <star index="1"/>!</li>
                <li>Ciao <star index="1"/>.</li>
                <li>Good day <star index="1"/>!</li>
                <li>Hi <star index="1"/>.</li>
            </random>
        </template>
    </category>

    <category>
        <pattern>_ IS *</pattern>
        <template>
            Yes, <star index="1"/> is <star index="2"/>.
        </template>
    </category>

    <category>
        <pattern>* LÀ *</pattern>
        <template>
            <srai>* IS *</srai>
        </template>
    </category>

    <category>
        <pattern>CHÀO *</pattern>
        <template>
            <think>
                <set name="subject"><star index="1"/></set>
            </think>
            <condition name="subject">
                <li value="miribot">Chào <get name="user" /></li>
                <li>Bạn chào ai đấy?</li>
            </condition>
        </template>
    </category>

    <category>
        <pattern>CHÀO BUỔI SÁNG</pattern>
        <template>
            <random>
                <li>Chào ngày mới!</li>
                <li>Chào buổi sáng</li>
            </random>
        </template>
    </category>

    <category>
        <pattern>TÔI THÍCH UỐNG CÀ PHÊ</pattern>
        <template>Bạn có hay cho kem hay đường vào cà phê không?</template>
    </category>

    <category>
        <pattern>CÓ</pattern>
        <that>BẠN CÓ HAY CHO KEM HAY ĐƯỜNG VÀO CÀ PHÊ KHÔNG</that>
        <template>Tôi cũng thế.</template>
    </category>

    <category>
        <pattern>KHÔNG</pattern>
        <that>BẠN CÓ HAY CHO KEM HAY ĐƯỜNG VÀO CÀ PHÊ KHÔNG</that>
        <template>Thế à? Tôi thích uống ngọt với ngậy.</template>
    </category>

    <category>
        <pattern>I LIKE DRINKING COFFEE</pattern>
        <template>Do you usually put cream or sugar to your coffee?</template>
    </category>

    <category>
        <pattern>YES</pattern>
        <that>DO YOU USUALLY PUT CREAM OR SUGAR TO YOUR COFFEE</that>
        <template>Me too.</template>
    </category>

    <category>
        <pattern>NO</pattern>
        <that>DO YOU USUALLY PUT CREAM OR SUGAR TO YOUR COFFEE</that>
        <template>Really? I like drinking sweet coffee.</template>
    </category>

    <category>
        <pattern>MY NAME IS *</pattern>
        <template>
            <set name="somename"><star index="1"/></set>I will remember your name.
        </template>
    </category>

    <category>
        <pattern>WHAT IS MY NAME</pattern>
        <template>
            Your name is <get name="somename"/>
        </template>
    </category>

    <category>
        <pattern>THINK ABOUT *</pattern>
        <template>
            I will think about it. <think><set name="somevar"><star index="1"/></set></think>
        </template>
    </category>

    <category>
        <pattern>TELL ME ABOUT *</pattern>
        <template>
            <get name="somevar"/> is good.
        </template>
    </category>

    <category>
        <pattern>MY GENDER IS *</pattern>
        <template>
            I will remember your gender. <think><set name="gender"><star index="1"/></set></think>
        </template>
    </category>

    <category>
        <pattern>DO YOU FIND ME ATTRACTIVE</pattern>
        <template>
            <condition name="gender">
                <li value="male">I find you very handsome.</li>
                <li value="female">I find you very pretty.</li>
                <li>I find you very attractive.</li>
            </condition>
        </template>
    </category>

    <topic name="coffee">
        <category>
            <pattern>HOW DO YOU DRINK COFFEE?</pattern>
            <template>I prefer mine with cream and sugar.</template>
        </category>

        <category>
            <pattern>I DRINK IT PLAIN</pattern>
            <template>I guess plain is good.</template>
        </category>
    </topic>

    <span>This is <star/> and <star index="2" /></span>
</aiml>
